generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Stock {
  id                Int       @id @default(autoincrement())
  symbol            String    @unique
  description       String
  displaySymbol     String
  type              String
  officialSubreddit String?
  lastSearchedAt    DateTime?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  redditPosts       RedditPost[]

  @@map("stocks")
}

model RedditPost {
  id           Int      @id @default(autoincrement())
  redditId     String   @unique
  url          String
  postTime     DateTime
  stockId      Int
  scrapedAt    DateTime?
  source       String   @default("search")  // "search" | "subreddit"

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  stock        Stock    @relation(fields: [stockId], references: [id])
  content      RedditPostContent?
  comments     RedditComment[]

  @@map("reddit_posts")
}

model RedditPostContent {
  id           Int      @id @default(autoincrement())
  redditPostId Int      @unique
  postContent  Json
  scrapedAt    DateTime @default(now())
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  redditPost   RedditPost @relation(fields: [redditPostId], references: [id], onDelete: Cascade)

  @@map("reddit_posts_content")
}

model RedditComment {
  id           Int      @id @default(autoincrement())
  redditId     String   @unique      // t1_xxxxx
  redditPostId Int
  body         String
  upvotes      Int
  createdAtUtc DateTime
  scrapedAt    DateTime @default(now())
  sentToAIAt   DateTime?
  sentiment    Float?
  flagForDelete Boolean  @default(false)

  redditPost   RedditPost @relation(fields: [redditPostId], references: [id], onDelete: Cascade)

  @@index([redditPostId])
  @@map("reddit_comments")
}

model ExternalService {
  id          Int      @id @default(autoincrement())
  name        String   @unique  // "reddit" | "finnhub" | "openai"
  description String?
  baseUrl     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apiLogs     ExternalApiLog[]

  @@map("external_services")
}

model ExternalApiLog {
  id              Int      @id @default(autoincrement())
  serviceId       Int
  endpoint        String   // The specific endpoint called
  method          String   // GET, POST, etc.
  requestedAt     DateTime @default(now())
  respondedAt     DateTime?
  durationMs      Int?     // Response time in milliseconds
  statusCode      Int?     // HTTP status code
  success         Boolean  @default(false)
  errorMessage    String?  // Error message if failed
  requestSummary  String?  // Brief description of the request
  responseSummary String?  // Brief summary of the response (not full body)
  proxyUsed       String?  // Masked proxy URL used for request (credentials hidden)

  createdAt       DateTime @default(now())

  service         ExternalService @relation(fields: [serviceId], references: [id])

  @@index([serviceId])
  @@index([requestedAt])
  @@map("external_api_logs")
}
